<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ghost.task4.Transaction"
    tools:showIn="@layout/app_bar_transaction">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayouttrans"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtNewExp"
                android:layout_alignParentTop="true"
                android:text="New Expense"
                android:textSize="20dp"
                />
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtNewExp"
                android:layout_below="@+id/txtNewExp"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/txtNewExp"
                android:layout_alignEnd="@+id/txtNewExp"
                android:layout_toRightOf="@+id/txtNewExp"
                android:layout_toEndOf="@+id/txtNewExp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtAmntExp"
                android:layout_below="@+id/edtNewExp"
                android:layout_alignRight="@+id/edtNewExp"
                android:layout_alignEnd="@+id/edtNewExp"
                android:layout_alignLeft="@+id/edtNewExp"
                android:layout_alignStart="@+id/edtNewExp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Expenses"
                android:id="@+id/btnExp"
                android:layout_below="@+id/edtAmntExp"
                android:layout_alignRight="@+id/edtAmntExp"
                android:layout_alignEnd="@+id/edtAmntExp" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayouttrans2"
            android:padding="16dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNewInc"
            android:layout_alignParentTop="true"
            android:text="New Income"
            android:textSize="20dp"
            />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtNewInc"
                android:layout_below="@+id/txtNewInc"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/txtNewInc"
                android:layout_alignEnd="@+id/txtNewInc"
                android:layout_toRightOf="@+id/txtNewInc"
                android:layout_toEndOf="@+id/txtNewInc"
                />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtAmnInc"
                android:layout_below="@+id/edtNewInc"
                android:layout_alignRight="@+id/edtNewInc"
                android:layout_alignEnd="@+id/edtNewInc"
                android:layout_alignLeft="@+id/edtNewInc"
                android:layout_alignStart="@+id/edtNewInc" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Income"
                android:id="@+id/btnInc"
                android:layout_below="@+id/edtAmnInc"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
